{
  "name": "@sage/core",
  "version": "0.0.1-alpha",
  "license": "MIT",
  "description": "Base components for Sage Design System",
  "author": "Kajabi Design System Services",
  "keywords": [
    "sage",
    "stencil",
    "framework",
    "web components",
    "design system"
  ],
  "main": "dist/index.cjs.js",
  "module": "dist/index.js",
  "es2015": "dist/esm/index.mjs",
  "es2017": "dist/esm/index.mjs",
  "types": "dist/types/index.d.ts",
  "collection": "dist/collection/collection-manifest.json",
  "collection:main": "dist/collection/index.js",
  "unpkg": "dist/core/core.esm.js",
  "publishConfig": {
    "registry": "https://npm.pkg.github.com/"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/kajabi/sage.git"
  },
  "bugs": {
    "url": "https://github.com/kajab/sage/issues"
  },
  "files": [
    "dist/",
    "loader/"
  ],
  "scripts": {
    "build": "yarn build:stencil",
    "build:stencil": "stencil build --docs",
    "generate": "stencil generate",
    "lint": "run-p lint.*",
    "lint.eslint": "eslint src",
    "lint.styles": "stylelint \"./src/**/*.*css\"",
    "prettier": "prettier \"./src/**/*.{html,ts,tsx,js,jsx}\"",
    "start": "yarn start:stencil",
    "start:stencil": "stencil build --dev --watch --serve",
    "test": "stencil test --spec --e2e",
    "test:watch": "stencil test --spec --e2e --watchAll"
  },
  "dependencies": {
    "@stencil/core": "^2.18.0"
  },
  "devDependencies": {
    "@stencil/eslint-plugin": "^0.4.0",
    "@stencil/react-output-target": "^0.3.1",
    "@stencil/sass": "^2.0.0",
    "@types/jest": "^27.0.3",
    "@typescript-eslint/eslint-plugin": "^5.40.0",
    "@typescript-eslint/parser": "^5.40.0",
    "eslint": "^8.25.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-react": "^7.31.10",
    "jest": "^27.4.5",
    "jest-cli": "^27.4.5",
    "lit-html": "^2.4.0",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.18",
    "prettier": "^2.7.1",
    "puppeteer": "^15.5.0",
    "stylelint": "^14.13.0",
    "stylelint-config-prettier": "^9.0.3",
    "stylelint-config-recommended": "^9.0.0",
    "stylelint-config-sass-guidelines": "^9.0.1",
    "typescript": "^4.8.4"
  }
}
