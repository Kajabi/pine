{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "allowUnreachableCode": false,
    "declaration": false,
    "experimentalDecorators": true,
    "lib": ["dom", "es2015", "es2017"],
    "jsx": "react",
    "jsxFactory": "h",
    "moduleResolution": "node",
    "module": "esnext",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "target": "es2017",
    "outDir": "../../_generated/core"
  },
  "include": ["src"],
  "exclude": ["node_modules", "**/*.spec.{ts|tsx}", "**/*.e2e.ts"]
}
