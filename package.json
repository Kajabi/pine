{
  "private": true,
  "workspaces": [
    "apps/*",
    "libs/*"
  ],
  "engines": {
    "node": ">= 16"
  },
  "scripts": {
    "build.all": "npx nx run-many --target=build",
    "commit": "npx cz",
    "coverage": "open libs/core/coverage/lcov-report/index.html",
    "deploy": "npx nx run-many -t deploy -p icons core",
    "lint.all": "npx nx run-many --target=lint",
    "prepare": "node ./.scripts/prepare.js",
    "setup": "npm install",
    "start": "npx nx run core:start",
    "stencil.generate": "npx nx run core:generate",
    "test.all": "npx nx run-many --target=test"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.1.2",
    "@commitlint/config-conventional": "^17.1.0",
    "commitizen": "^4.2.5",
    "husky": "^8.0.1",
    "lerna": "^7.0.1",
    "lint-staged": "^13.0.3",
    "nx": "^16.8.1",
    "nx-cloud": "latest",
    "validate-branch-name": "^1.3.0"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
