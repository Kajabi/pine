{
  "compilerOptions": {
    "alwaysStrict": true,
    "allowSyntheticDefaultImports": true,
    "allowUnreachableCode": false,
    "baseUrl": ".",
    "declaration": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["dom", "es2017"],
    "module": "es2015",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "pretty": true,
    "removeComments": false,
    "strict": true,
    "strictPropertyInitialization": false,
    "paths": {
      "@pine-ds/core": ["./libs/core"],
      "@pine-ds/doc-components": ["./libs/doc-components"],
      "@pine-ds/react": ["./libs/react"]
    },
    "target": "es2017"
  }
}
