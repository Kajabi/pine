{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": ".",
    "declaration": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "lib": ["es2017", "dom"],
    "module": "esnext",
    "moduleResolution": "node",
    "paths": {
      "@sage/core": ["_generated/core/"],
      "@sage/core-react": ["libs/core-react/src/index.ts"],
      "@sage/core/*": ["_generated/core/dist/components/*"],
      "@sage/core/loader": ["_generated/core/loader"]
    },
    "rootDir": ".",
    "skipDefaultLibCheck": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "target": "es2015"
  },
  "exclude": ["node_modules", "tmp", "_generated/"]
}
