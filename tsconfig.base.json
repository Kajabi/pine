{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": ".",
    "declaration": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "lib": ["es2017", "dom"],
    "module": "esnext",
    "moduleResolution": "node",
    "paths": {
      "@sage/core": ["generated/dist/core"],
      "@sage/core-react": ["libs/core-react/src/index.ts"],
      "@sage/core/*": ["generated/dist/core/components/*"],
      "@sage/core/loader": ["generated/dist/core/loader"]
    },
    "rootDir": ".",
    "skipDefaultLibCheck": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "target": "es2015"
  },
  "exclude": ["node_modules", "tmp", "generated"]
}
